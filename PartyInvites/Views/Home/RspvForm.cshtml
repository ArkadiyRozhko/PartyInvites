@model PartyInvites.Models.GuestResponce

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RspvForm</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css"/>
</head>
<body>
<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>Ваше имя: @Html.TextBoxFor(x => x.Name)</p>
        <p>Ваш Email: @Html.TextBoxFor(x=>x.Email)</p>
        <p>Ваш телефон: @Html.TextBoxFor(x=>x.Phone)</p>
        <p>Вы придете? @Html.DropDownListFor(x=>x.WillAttend,new [] {
                           new SelectListItem() { Text = "Да, конечно я буду", Value = Boolean.TrueString},
                           new SelectListItem() {Text="Нет, я не смогу",Value = Boolean.FalseString} })</p>
                           <p><input type="submit" value="отправить форму"/> </p>
    }
</div>
</body>
</html>
